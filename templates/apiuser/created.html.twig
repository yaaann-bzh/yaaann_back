{% extends 'body.html.twig' %}

{% block title %}Nouvelle clé API{% endblock %}

{% block content %}
    <div class="row">
        <div class="col-12 col-md-8 offset-md-2 col-lg-6 offset-lg-3 mt-5">
            <h1 class="h2 mb-3">Votre clé a bien été générée</h1>
            <p>
                Application : 
                <span class="font-weight-bold">
                    {{ apiuser.appName }}
                </span>
            </p>
            <p>
                Email : 
                <span class="font-weight-bold">
                    {{ apiuser.email }}
                </span>
            </p>
            <div class="card">
                <h5 class="card-header">
                    Votre clé :
                </h5>
                <p class="card-text m-3 text-monospace" style="user-select: all;">{{apiuser.apiToken}}</p>
            </div>
            <a class="btn btn-primary mt-3" href="." role="button">Retour</a>
        </div>
    </div>
    <hr class="col-10 offset-1 mt-5 mb-5">
    {% include "apiuser/_list.html.twig" %}
{% endblock %}


